[
    {server, [
        {cacertfile, "/etc/rabbitmq/certs/ca_certificate.pem"},
        {certfile,   "/etc/rabbitmq/certs/server_wildcard_certificate.pem"},
        {keyfile,    "/etc/rabbitmq/certs/server_wildcard.key"},
        {secure_renegotiate, true},
        {verify, verify_peer},
        {fail_if_no_peer_cert, true},
        {customize_hostname_check, [
            {match_fun, public_key:pkix_verify_hostname_match_fun(https)}
        ]}
    ]},
    {client, [
        {cacertfile, "/etc/rabbitmq/certs/ca_certificate.pem"},
        {certfile,   "/etc/rabbitmq/certs/client_wildcard_certificate.pem"},
        {keyfile,    "/etc/rabbitmq/certs/client_wildcard.key"},
        {secure_renegotiate, true},
        {verify, verify_peer},
        {fail_if_no_peer_cert, true},
        {customize_hostname_check, [
            {match_fun, public_key:pkix_verify_hostname_match_fun(https)}
        ]}
    ]}
].
